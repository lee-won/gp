/**index.wxss**/
.search-btn{
  position:fixed;
  bottom:120rpx;
  right:30rpx;
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  background: #fff;
  padding:0 24rpx;
  box-sizing: border-box;
  z-index:999;
  box-shadow: 0 0 4rpx 4rpx rgba(0,0,0,0.1)
}
.search-icon{
  position:absolute;
  top:25rpx;
  left:25rpx;
  height:50rpx;
  width:50rpx;
}
.search-input{
  display: inline-block;
  font-family:PingFangSC-Regular;
  font-size: 26rpx;
  color: #999;
  letter-spacing: 0;
  height:60rpx;
  line-height:60rpx;
}
.nav{
  position:fixed;
  height:100rpx;
  bottom:0;
  left:0;
  width:100%;
  background:#fff;
  text-align: center;
  border-top:1px solid rgba(0,0,0,0.1)
}
.nav-icon{
  height:80rpx;
  width:80rpx;
  margin-top:10rpx;
}
.content{
  position:fixed;
  top:0;
  left:0;
  bottom:100rpx;
  width:100%;
}
.waterFull{
  width:100%;
  display: flex;
}
.flex-wrapper{
  flex:1;
  display: inline-block;
  width:50%;
  text-align: center;
}
.content-item{
  padding:2%;
  border:1px solid rgba(0,0,0,0.2);
  width:100%;
  box-sizing: border-box;
  box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
}
.content-pic{
  display: inline-block;
  width:100%;
}
.no-margin-right{
  margin-left:0;
}
.layer{
  position:fixed;
  z-index:888;
  top:0;
  bottom:0;
  left: 0;
  width:100%;
  background:#000;
  opacity:0;
}
.hidden{
  display: none;
}
.search-page{
  position:fixed;
  z-index:9999;
  top:0;
  bottom:0;
  right:-100%;
  width:80%;
  background:#fff;
}
.search{
  position:absolute;
  top:0;
  left:0;
  display: block;
  width:100%;
  background: #ccc;
  height:90rpx;
  padding:0 24rpx;
  box-sizing: border-box;
  z-index:9999;
}
 .search_icon{
  position:absolute;
  right:15rpx;
  top:15rpx;
  height:40rpx;
  width:40rpx;
  padding:10rpx 20rpx;  
  z-index:9999;
} 
.search-input{
  position:relative;
  top:15rpx;
  display: block;
  background: #fff;
  height:60rpx;
  border-radius: 8rpx;
  font-size:26rpx;
  padding-right:60rpx;
  padding-left:30rpx;
}
.search-history{
  margin-top:30rpx;
}
.star{
  position: absolute;
  bottom:0;
  left:0;
  width:100%;
  text-align:center;
  height:100rpx;
  line-height: 100rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  border-top:1px solid rgba(0,0,0,0.2)
}
.search-content{
  position:absolute;
  top:90rpx;
  bottom:100rpx;
  left:0;
  width:100%;
}
.hot-label-item{
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  padding:10rpx 20rpx;
  background:#ccc;
  border-radius: 8rpx;
  margin:20rpx;
  word-break: normal;
}
.search-pic{
  display: block;
  border:1px solid rgba(0,0,0,0.2);
  padding:2%;
  width:100%;
  box-sizing: border-box;
}
.loading{
  text-align: center;
  height:80rpx;
  box-sizing: border-box;
}
.loading-pic{
  height:30rpx;
  width:30rpx;
  vertical-align: middle;
  margin-top:25rpx;
}